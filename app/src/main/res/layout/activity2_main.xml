<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="MainActivity2"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/runningman1"
        android:backgroundTint="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:textColor="@android:color/white"
            android:textSize="8pt"
            android:id="@+id/hrsTxt"
            android:layout_marginLeft="38pt"
            android:layout_marginTop="70pt"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:id="@+id/minsTxt"
            android:textSize="8pt"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/hrsTxt"
            android:layout_marginTop="70pt"
            android:layout_marginLeft="19pt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seconds"
            android:textSize="8pt"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/minsTxt"
            android:layout_marginTop="70pt"
            android:layout_marginLeft="14pt"
            />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10pt"
        android:layout_marginTop="80pt"
        android:height="40dp"
        android:width="75dp"
        android:textAlignment="center"
        android:textSize="15pt"
        android:background="@android:color/white"
        android:id="@+id/hrs"
        android:layout_toLeftOf="@id/mins"
        android:text="0"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10pt"
        android:layout_marginTop="80pt"
        android:height="40dp"
        android:width="75dp"
        android:textAlignment="center"
        android:textSize="15pt"
        android:background="@android:color/white"
        android:id="@+id/mins"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="0"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80pt"
        android:height="40dp"
        android:width="75dp"
        android:textAlignment="center"
        android:textSize="15pt"
        android:background="@android:color/white"
        android:id="@+id/secs"
        android:layout_toRightOf="@id/mins"
        android:text="0"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="00:00:00"
        android:layout_centerInParent="true"
        android:textSize="56sp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_gravity="center"
        android:id="@+id/txtView"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStart"
        android:onClick="onClickStart"
        android:layout_margin="10dp"
        android:layout_above="@id/btnPause"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:onClick="onClickPause"
        android:id="@+id/btnPause"
        android:layout_margin="10dp"
        android:layout_above="@id/btnStop"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_gravity="center"
        android:onClick="onClickStop"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"/>



</RelativeLayout>


</RelativeLayout>
